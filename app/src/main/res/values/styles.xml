<resources>
    <style name="btn" parent="@style/Widget.AppCompat.Button.Borderless">
        <item name="backgroundTint">@color/align</item>
        <item name="elevation">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="iconPadding">0dp</item>
        <item name="cornerRadius">0dp</item>
        <item name="android:scaleX">1</item>
        <item name="android:onClick">clickFunction</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="imgButton" parent="@style/Widget.AppCompat.Button.Borderless" >
        <item name="android:layout_width">100dp</item>
        <item name="android:layout_height">100dp</item>
        <item name="android:scaleType">fitCenter</item>
        <item name="android:background">@color/transparent</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="elevation">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:padding">0dp</item>
        <item name="android:gravity">left</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:src">@drawable/plus</item>
        <item name="android:layout_weight">1</item>
    </style>
</resources>