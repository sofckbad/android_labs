<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="#333333">


    <EditText
            android:layout_width="match_parent"
            android:layout_height="0pt"
            android:id="@+id/result"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/buttons"
            android:textAppearance="@style/TextAppearance.AppCompat.Display2"
            android:textColor="#FFFFFF"
            android:textAllCaps="true"
            android:textSize="44sp"
            android:fontFamily="sans-serif-medium"
            app:layout_constraintEnd_toEndOf="parent"
            android:gravity="right|center_vertical"
            android:paddingRight="15dp"
            android:paddingBottom="5dp"
            android:textIsSelectable="true"
            android:cursorVisible="true"
            android:textCursorDrawable="@null"/>

    <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:id="@+id/buttons">

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/str_0">

            <Button
                    android:text="("
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/openBracket"
                    style="@style/btn"
                    app:backgroundTint="#3A3A3A" />

            <Button
                    android:text=")"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/closeBracket"
                    style="@style/btn"
                    app:backgroundTint="#3A3A3A" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/str_1">

            <Button
                    style="@style/btn"
                    android:text="MC"
                    android:id="@+id/mc"
                    app:backgroundTint="#3A3A3A" />

            <Button
                    style="@style/btn"
                    android:text="M+"
                    android:id="@+id/m_plus"
                    app:backgroundTint="#3A3A3A" />

            <Button
                    style="@style/btn"
                    android:text="M-"
                    android:id="@+id/m_minus"
                    app:backgroundTint="#3A3A3A" />

            <Button
                    style="@style/btn"
                    android:text="MR"
                    android:id="@+id/mr"
                    app:backgroundTint="#3A3A3A" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/str_2">

            <Button
                    style="@style/btn"
                    android:text="C"
                    android:id="@+id/clear"
                    app:backgroundTint="#3A3A3A"
                    android:textColor="@color/txt_bg" />

            <Button
                    style="@style/btn"
                    android:text="/"
                    android:id="@+id/divide"
                    app:backgroundTint="#3A3A3A"
                    android:textColor="@color/txt_bg" />

            <Button
                    style="@style/btn"
                    android:text="*"
                    android:id="@+id/multiply"
                    app:backgroundTint="#3A3A3A"
                    android:textColor="@color/txt_bg" />

            <Button
                    style="@style/btn"
                    android:text="R"
                    android:id="@+id/clr"
                    app:backgroundTint="#3A3A3A"
                    android:textColor="@color/txt_bg"
                    app:icon="@drawable/abc_vector_test"
                    app:iconTint="@color/txt_bg"
                    app:iconPadding="-15dp" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/str_3">

            <Button
                    style="@style/btn"
                    android:text="7"
                    android:id="@+id/seven" />

            <Button
                    style="@style/btn"
                    android:text="8"
                    android:id="@+id/eith" />

            <Button
                    style="@style/btn"
                    android:text="9"
                    android:id="@+id/nine" />

            <Button
                    style="@style/btn"
                    android:text="-"
                    android:id="@+id/minus"
                    app:backgroundTint="#3A3A3A"
                    android:textColor="@color/txt_bg" />
        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/str_4">

            <Button
                    style="@style/btn"
                    android:text="4"
                    android:id="@+id/four" />

            <Button
                    style="@style/btn"
                    android:text="5"
                    android:id="@+id/five" />

            <Button
                    style="@style/btn"
                    android:text="6"
                    android:id="@+id/six" />

            <Button
                    style="@style/btn"
                    android:text="+"
                    android:id="@+id/plus"
                    app:backgroundTint="#3A3A3A"
                    android:textColor="@color/txt_bg" />

        </TableRow>

        <TableRow
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/str_5">

            <Button
                    style="@style/btn"
                    android:text="1"
                    android:id="@+id/one" />

            <Button
                    style="@style/btn"
                    android:text="2"
                    android:id="@+id/two" />

            <Button
                    style="@style/btn"
                    android:text="3"
                    android:id="@+id/three" />

            <Button
                    style="@style/btn"
                    android:text="SIN"
                    android:id="@+id/sinus"
                    app:backgroundTint="#3A3A3A"
                    android:textColor="@color/txt_bg" />
        </TableRow>

        <TableRow
                android:layout_width="424dp"
                android:layout_height="match_parent"
                android:id="@+id/str_6">

            <Button
                    style="@style/btn"
                    android:text="="
                    android:id="@+id/equally"
                    app:backgroundTint="@color/txt_bg" />

            <Button
                    style="@style/btn"
                    android:text="0"
                    android:id="@+id/zero" />

            <Button
                    style="@style/btn"
                    android:text="."
                    android:id="@+id/point" />

            <Button
                    style="@style/btn"
                    android:text="COS"
                    android:id="@+id/cos"
                    app:backgroundTint="#3A3A3A"
                    android:textColor="@color/txt_bg" />

        </TableRow>

    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>