<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activities.CryptoActivity"
        android:background="@color/darkGrey">

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <TextView
                    android:text="Текст"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView11"
                    android:fontFamily="monospace"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:gravity="center" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/default_text"
                    android:fontFamily="monospace"
                    android:textColor="@color/hint"
                    android:textSize="18sp"
                    tools:text="default text" />

            <TextView
                    android:text="Зашифрованное (библиотека)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView5"
                    android:fontFamily="monospace"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:gravity="center" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/encrypted_type0"
                    android:fontFamily="monospace"
                    android:textColor="@color/hint"
                    android:textSize="18sp"
                    tools:text="encrypt" />

            <TextView
                    android:text="Расшифрованное (библиотека)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView7"
                    android:fontFamily="monospace"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:gravity="center" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/decrypted_type0"
                    android:fontFamily="monospace"
                    android:textColor="@color/hint"
                    android:textSize="18sp"
                    tools:text="decrypt" />

            <TextView
                    android:text="Зашифрованное (Виженер)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView6"
                    android:fontFamily="monospace"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:gravity="center" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/encrypted_type1"
                    android:fontFamily="monospace"
                    android:textColor="@color/hint"
                    android:textSize="18sp"
                    tools:text="encrypt" />

            <TextView
                    android:text="Расшифрованное (Виженер)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView8"
                    android:fontFamily="monospace"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:gravity="center" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/decrypted_type1"
                    android:fontFamily="monospace"
                    android:textColor="@color/hint"
                    android:textSize="18sp"
                    tools:text="decrypt" />

            <TextView
                    android:text="Зашифрованное (Хаффман)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView9"
                    android:fontFamily="monospace"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:visibility="gone" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/encrypted_type2"
                    android:fontFamily="monospace"
                    android:textColor="@color/hint"
                    android:textSize="18sp"
                    tools:text="encrypt"
                    android:visibility="gone" />

            <TextView
                    android:text="Расшифрованное (Хаффман)"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView10"
                    android:fontFamily="monospace"
                    android:textColor="@color/white"
                    android:textSize="22sp"
                    android:gravity="center"
                    android:visibility="gone" />

            <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/decrypted_type2"
                    android:fontFamily="monospace"
                    android:textColor="@color/hint"
                    android:textSize="18sp"
                    tools:text="decrypt"
                    android:visibility="gone" />
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>